# ZBOSS 019.240 Enhanced Configuration for zb_mux
# This file is sourced by systemd services

# ============================================================================
# SPI CONFIGURATION
# ============================================================================
# SPI speed in Hz - optimized for IW612 with burst mode enabled
spi_speed=10000000

# ============================================================================
# ZBOSS TRACE CONFIGURATION  
# ============================================================================
# Trace levels: 0=none, 1=error, 2=warning, 3=info, 4=debug
# Trace masks: 0x00000000=none, 0x00000800=release, 0xffffffff=full debug
#mux_trace=0:0x00000000 # Production: No zboss trace
#mux_trace=4:0x00000800 # Release: Basic zboss trace  
mux_trace=4:0xffffffff # Development: Full debug zboss trace

# ============================================================================
# HARDWARE CONFIGURATION
# ============================================================================
# Hardware setting detected by zb_mux.sh at runtime
soc_id=i.MX8MM

# ============================================================================
# ZBOSS 019.240 ENHANCED FEATURES
# ============================================================================
# Zigbee TX Power: -32 to +8 dBm (default: 0)
ZB_TX_POWER=0

# Thread TX Power: -32 to +8 dBm (default: 0)  
OT_TX_POWER=0

# Enable advanced error recovery
ZB_ERROR_RECOVERY=1

# Enable frame retry mechanism
ZB_FRAME_RETRY=1

# Maximum frame retry count
ZB_MAX_RETRY=3

# ============================================================================
# LOGGING AND DEBUGGING
# ============================================================================
# Bit field: 0: no log, 1: log on console, 2: log to file, 3: both
ZB_MUX_OUT=2

# SPI Debug: 0: no log, 1: dump SPI header, 2: dump SPI data, 3: both
DUMP_SPI=0

# SPINEL Debug: 0: no log, 1: dump raw data, 2: dump interpreted data, 3: both
DUMP_SPINEL=0

# Enable performance monitoring
ZB_PERF_MON=0

# Log file rotation (MB)
ZB_LOG_SIZE_MAX=10

# ============================================================================
# ADVANCED SPI SETTINGS (ZBOSS 019.240)
# ============================================================================
# SPI timeout in milliseconds
ZB_SPI_TIMEOUT=1000

# SPI retry count on failure
ZB_SPI_RETRY=3

# Enable SPI flow control
ZB_SPI_FLOW_CONTROL=1

# SPI buffer size optimization
ZB_SPI_BUFFER_SIZE=2048
